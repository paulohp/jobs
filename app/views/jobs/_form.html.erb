<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-left:0;" class="span4 field">
    <%= f.label :title, "Título da vaga *" %>
    <%= f.text_field :title %>
  </div>
  <div class="span4 field">
    <%= f.label :company_name, "Nome da empresa *" %>
    <%= f.text_field :company_name %>
  </div>
  <div style="margin-left:0;" class="span4 field">
    <%= f.label :website, "Tem site? Manda ae *" %>
    <%= f.text_field :website,:placeholder => "http://" %>
  </div>
  <div class="span4 field">
    <%@categories = Category.all%>
    <%= f.label :category_id, "Categoria *" %>
    <%= f.select :category_id, [["Selecione uma categoria", 0]]+ @categories.collect { |c| [c.name, c.id]}, :style=>"width: 370px;"  %>
  </div>
  <div class="field">
    <%= f.label :description, "Pequena introdução da vaga *" %>
    <span>2 a 3 paragrafos que atraiam a atenção de posiveis candidatos.</span>
    <%= f.cktext_area :description, :ckeditor => {:uiColor => "#f4f4f4", :toolbar => "mini"} %>
  </div>
  <br>
  <div class="field">
    <%= f.label :company_description, "Descreva sua startup e a vaga aberta *" %>
    <span>Informações relevantes sobre sua empresa, produto, equipe, sonhos, seus planos de conquista mundial, as responsabilidades do trabalho, requisitos, data de início, salário, etc</span>
    <%= f.cktext_area :company_description, :ckeditor => {:uiColor => "#f4f4f4", :toolbar => "mini"} %>
  </div>
  <br>
  <div class="field">
    <%= f.label :keywords, "Palavras chave" %>
    <%= f.text_field :keywords %>
  </div>
  <div style="margin-left:0;" class="span4 field">
    <%= f.label :apply_email, "Interessados serão enviados para *" %>
    <%= f.text_field :apply_email %>
  </div>
  <div class="span4 field">
    <%= f.label :contact, "Como podemos falar com você? *" %>
    <%= f.text_field :contact %>
  </div>
  <div class="field">
    <%= f.label :terms, "Termos:" %>
    <span>Você concorda que o envio pode ser apagado sem aviso prévio se não seguir as nossas orientações (ver topo da página) ou contém linguagem imprópria ou conteúdo.</span>
    <label><%= f.check_box :terms %>Sim, eu aceito</label>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Enviar", :class => "btn btn-large btn-primary" %>
    <%= link_to 'Voltar', jobs_path, :class => "btn btn-large btn-gray" %>
  </div>
<% end %>
